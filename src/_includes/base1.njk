    <script>
  if (window.netlifyIdentity) {
    window.netlifyIdentity.on("init", (user) => {
      if (!user) {
        window.netlifyIdentity.on("login", () => {
          document.location.href = "/admin/";
        });
      }
    });
  }
</script>
<script>
const embedLink = document.querySelector('.embed-link');
const embedContent = document.getElementById('embedded-content');

embedLink.addEventListener('click', (event) => {
  event.preventDefault(); // Prevent default link behavior

  const iframe = document.createElement('iframe');
  iframe.src = embedLink.getAttribute('href'); 
  iframe.width = "100%"; // Adjust width as needed
  iframe.height = "500px"; // Adjust height as needed 

  embedContent.innerHTML = ''; // Clear previous content (if any)
  embedContent.appendChild(iframe);
});
</script>
